//C program to print all even numbers AND sum of it from 1 to n.

#include <stdio.h>
int main()
{
    int i, n, sum=0;
    printf("Enter upper limit: ");
    scanf("%d", &n);
    printf("even number from 1 to %d are \n",n);
    for(i=1; i<n; i++){
    	if(i%2==0){
    		printf("%d\n",i);
		}
	}

    for(i=2; i<=n; i+=2)
    {
        sum =sum+i;
    }

    printf("Sum of all even number between 1 to %d = %d\n", n, sum);

    return 0;
}

